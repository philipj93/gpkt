{
  "name": "gpkt-monorepo",
  "description": "Package creation utility for React, Node, and CLI projects written in TypeScript",
  "version": "0.1.8",
  "private": true,
  "homepage": "https://github.com/tundera/gpkt",
  "author": {
    "name": "Philip Johnston",
    "url": "https://github.com/tundera",
    "email": "tunderadev@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tundera/gpkt",
    "directory": "packages/transforms"
  },
  "packageManager": "yarn@3.2.0",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "clean": "turbo run clean && rimraf **/node_modules **/.turbo",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag && yarn workspaces foreach run -ptv publish --access public"
  },
  "devDependencies": {
    "bumpp": "^7.1.1",
    "prettier": "2.6.2",
    "pretty-quick": "3.1.3",
    "rimraf": "^3.0.2",
    "turbo": "1.2.1"
  }
}
