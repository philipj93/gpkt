    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "2.22.0",
    "@types/eslint": "8.4.2",
    "eslint": "8.13.0",
    "eslint-config-gpkt": "workspace:*",
    "prettier": "2.6.2",
    "pretty-quick": "3.1.3",
    "rimraf": "3.0.2",
    "turbo": "1.2.1"
  }
