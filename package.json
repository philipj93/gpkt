{
  "name": "gpkt-monorepo",
  "description": "Package creation utility for React, Node, and CLI projects written in TypeScript",
  "version": "0.1.8",
  "private": true,
  "homepage": "https://github.com/tundera/gpkt",
  "author": {
    "name": "Philip Johnston",
    "url": "https://github.com/tundera",
    "email": "tunderadev@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tundera/gpkt",
    "directory": "packages/transforms"
  },
  "packageManager": "pnpm@7.0.0",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "clean": "turbo run clean && rimraf **/node_modules **/.turbo",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.4",
    "@changesets/cli": "2.22.0",
    "@types/eslint": "8.4.2",
    "eslint": "8.14.0",
    "eslint-config-gpkt": "workspace:*",
    "prettier": "2.6.2",
    "pretty-quick": "3.1.3",
    "rimraf": "^3.0.2",
    "turbo": "1.5.3"
  },
  "pnpm": {
    "overrides": {},
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/core",
        "@babel/preset-env",
        "react",
        "react-dom",
        "vite"
      ],
      "allowedVersions": {
        "@opentelemetry/api": "*",
        "react": "*"
      }
    }
  }
}
